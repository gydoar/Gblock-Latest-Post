{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "block/gblock-latest-posts",
  "version": "0.1.0",
  "title": "Latest Posts",
  "category": "text",
  "description": "Gutenberg Block to show latest posts.",
  "keywords": [
    "latest",
    "posts"
  ],
  "supports": {
    "html": false
  },
  "textdomain": "latest-posts",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "attributes": {
    "numberOfPosts": {
      "type": "number",
      "default": 6
    },
    "displayFeaturedImage": {
      "type": "boolean",
      "default": true
    },
    "order": {
      "type": "string",
      "default": "desc"
    },
    "orderBy": {
      "type": "string",
      "default": "date"
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "object"
      }
    }
  }
}